<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"/>

        <Button
            android:id="@+id/button_detect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detect Faces"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/button_place_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Emoji"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/button_place_santa_hat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Place Santa Hats"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/button_open_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Gallery"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>